<% @paperName = randomPaperName %>

<!DOCTYPE html>

<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title><%= @paperName %></title>
		<link href="stylesheet.css" rel="stylesheet" type="text/css" />
	</head>

	<body>
		<h1><%= @paperName %></h1>

		<div class='quotations'>
			<% for @quotation in quotations %>
				<figure class='quotation'>
					<div>
						<div class="date">
							<%= @quotation['date'].localtime.strftime("%b. %e, %l:%M %P") %>
						</div>

						<blockquote><%= ERB::Util::h(@quotation['body']).gsub(/\n/, "<br />") %></blockquote>

						<figcaption><%= ERB::Util::h(@quotation['author']) %></figcaption>
					</div>
				</figure>
			<% end %>
		</div>

		<form class="addQuotation hidden" method="post">
			<!-- <div class="revealer"> -->
				<a class="revealer" href="#">Submit a quotation</a>
			<!-- </div> -->

			<textarea name="body" rows="3" placeholder="What was said?"></textarea>
			<input name="author" type="text" placeholder="Who said it?"></input>
			<a class="submitLink" href="#">Fire it off</a>
			<!-- <input type="submit" value="Fire it off"></input> -->
		</form>

		<script src="media/scripts/lib/mootools-core-1.4.5-full-nocompat-yc.js" type="text/javascript"></script>
		<script src="media/scripts/list.js" type="text/javascript"></script>
	</body>
</html>